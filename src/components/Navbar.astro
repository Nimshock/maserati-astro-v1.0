---
import '../styles/global.css';


const navLinks = [
    { name: "Inicio", href: "/" },
    { name: "Eventos", href: "/eventos" },
    { name: "Tienda", href: "/tienda" },
    { name: "Gráficos", href: "/graficos" },
    { name: "Comunidad", href: "/comunidad" },
    { name: "Mapa", href: "/mapa" },
    { name: "Sobre Nosotros", href: "/sobreNosotros" },
    { name: "Contacto", href: "/contacto" },
];
---
<nav class="fixed w-full z-50 top-0 left-0 bg-maserati-negro/95 backdrop-blur-md border-b border-maserati-gris/30 transition-all duration-300">
    <div class="w-full px-6 md:px-12 py-4 flex justify-between items-center">
        
        <a href="/" class="shrink-0 transition-opacity hover:opacity-80">
            <img src="/assets/images/logos-image/logoMaserati.png" alt="Maserati Home" class="h-15 w-auto object-contain" />
        </a>

        <div class="hidden md:flex items-center gap-8">
            
            <a href="/" class="maserati-btn">
                <span></span><span></span><span></span><span></span> 
                Inicio
            </a>

            <a href="/eventos" class="maserati-btn">
                <span></span><span></span><span></span><span></span>
                Eventos
            </a>

            <a href="/tienda" class="maserati-btn">
                <span></span><span></span><span></span><span></span>
                Tienda
            </a>

            <a href="/graficos" class="maserati-btn">
                <span></span><span></span><span></span><span></span>
                Gráficos
            </a>

            <a href="/comunidad" class="maserati-btn">
                <span></span><span></span><span></span><span></span>
                Comunidad
            </a>

            <a href="/mapa" class="maserati-btn">
                <span></span><span></span><span></span><span></span>
                Mapa
            </a>


            <a href="/sobreNosotros" class="maserati-btn">
                <span></span><span></span><span></span><span></span>
                Sobre Nosotros
            </a>

            <a href="/contacto" class="maserati-btn">
                <span></span><span></span><span></span><span></span>
                Contacto
            </a>

        </div>

        <!-- Esto es el SVG de la "hamburguesa" del menu en mobile -->
        <button id="mobile-menu-btn" class="md:hidden text-maserati-blanco hover:text-maserati-cian focus:outline-none">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </button>
        <!-- ----------------------------------------------------------- -->
    </div>

    <div id="mobile-menu" class="hidden md:hidden bg-maserati-negro border-b border-maserati-gris/30 absolute w-full shadow-2xl">
        <div class="flex flex-col p-6 space-y-4 text-center">
            <a href="/" class="mobile-link">Inicio</a>
            <a href="/eventos" class="mobile-link">Eventos</a>
            <a href="/tienda" class="mobile-link">Tienda</a>
            <a href="/graficos" class="mobile-link">Gráficos</a>
            <a href="/comunidad" class="mobile-link">Comunidad</a>
            <a href="/mapa" class="mobile-link">Mapa</a>
            <a href="/sobreNosotros" class="mobile-link">Sobre nosotros</a>
            <a href="/contacto" class="mobile-link">Contacto</a>
            <div id="mobile-auth-buttons" class="pt-4 border-t border-maserati-gris/30"></div>
        </div>
    </div>
</nav>

<style>
    .maserati-btn {
        position: relative;
        display: inline-block;
        padding: 10px 24px;
        color: var(--color-maserati-plata);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-decoration: none;
        overflow: hidden; 
        transition: 0.2s;
        font-weight: 600;
        border-radius: 6px;
    }

    .maserati-btn:hover {
        color: #fff; 
        background: #1b1a1a; 
        box-shadow: 0 0 10px rgba(0,0,0,0.5); 
        transition-delay: 0.1s; 
    }


    .maserati-btn span {
        position: absolute;
        display: block;
    }


    .maserati-btn span:nth-child(1) {
        top: 0;
        left: -100%;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, transparent, #d4af37);
    }
    .maserati-btn:hover span:nth-child(1) {
        left: 100%;
        transition: 1s;
    }


    .maserati-btn span:nth-child(2) {
        top: -100%;
        right: 0;
        width: 3px;
        height: 100%;
        background: linear-gradient(180deg, transparent, #d4af37);
    }
    .maserati-btn:hover span:nth-child(2) {
        top: 100%;
        transition: 1s;
        transition-delay: 0.25s; 
    }


    .maserati-btn span:nth-child(3) {
        bottom: 0;
        right: -100%;
        width: 100%;
        height: 3px;
        background: linear-gradient(270deg, transparent, #d4af37);
    }
    .maserati-btn:hover span:nth-child(3) {
        right: 100%;
        transition: 1s;
        transition-delay: 0.5s;
    }


    .maserati-btn span:nth-child(4) {
        bottom: -100%;
        left: 0;
        width: 3px;
        height: 100%;
        background: linear-gradient(360deg, transparent, #d4af37);
    }
    .maserati-btn:hover span:nth-child(4) {
        bottom: 100%;
        transition: 1s;
        transition-delay: 0.75s;
    }


    .mobile-link {
            block text-maserati-plata hover:text-maserati-azul text-lg py-2;
    }
</style>

<script>

    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    menuBtn?.addEventListener('click', () => mobileMenu?.classList.toggle('hidden'));

</script>