---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CartDrawer from '../components/CartDrawer';
import GlobalConfigurator from '../components/GlobalConfigurator.jsx';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Maserati Eventos y Modelos Exclusivos">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/images/ico/logoMaseratiDorado.ico" />
		<meta name="description" content="Esta página trata sobre los automoviles Maserati y venta de merchadising o sus vehículos">
        <meta name="keyword" content="coches, entradas, Maserati, tienda, merchadising">
        <meta name="author" content="Cosmin Florin Stoian">
        <meta property="og:type" content="website" />
<meta property="og:url" content="https://maserati-cosmin.netlify.app/" />
<meta property="og:title" content="Nim's Maserati" />
<meta property="og:description" content="Esta página trata sobre los automoviles Maserati y venta de merchadising o sus vehículos" />
<meta property="og:image" content="https://maserati-cosmin.netlify.app/assets/images/eventos/Maserati-Grecale-Urban-Madrid.webp" />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://maserati-cosmin.netlify.app/" />
<meta property="twitter:title" content="Nim's Maserati" />
<meta property="twitter:description" content="Esta página trata sobre los automoviles Maserati y venta de merchadising o sus vehículos" />
<meta property="twitter:image" content="https://maserati-cosmin.netlify.app/assets/images/eventos/Maserati-Grecale-Urban-Madrid.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Maserati</title>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
	</head>
	<body class="bg-maserati-negro text-maserati-blanco min-h-screen flex flex-col m-0 p-0 overflow-x-hidden">
		<Navbar />

		<CartDrawer client:load />
		<GlobalConfigurator client:load />
		<main class="grow"> 
			<slot />
		</main>
				<Footer />
	</body>
</html>