---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CartDrawer from '../components/CartDrawer';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Maserati Eventos y Modelos Exclusivos">
		<!-- Adapta el tamaño a nuestros dispositivos -->
		<meta name="viewport" content="width=device-width" />
		<!-- Icono para la pestaña de la página web -->
		<link rel="icon" type="image/svg+xml" href="/assets/images/ico/logoMaseratiDorado.ico" />

		<!-- Metatags para mejorar el SEO -->
		<meta name="description" content="Esta página trata sobre los automoviles Maserati y venta de merchadising o sus vehículos">
        <meta name="keyword" content="coches, entradas, Maserati, tienda, merchadising">
        <meta name="author" content="Cosmin Florin Stoian">
        <meta name="robots" content="nofollow">

		<!-- Metatags para que en diferentes sitios (Facebook, X, Youtube, etc) se muestre tú enlace de mejor forma -->

        <meta name="OG:TITLE" content="Nim's Maserati">
        <meta name="OG:IMAGE" content="/assets/images/eventos/Maserati-Grecale-Urban-Madrid.webp">
        <meta name="OG:description" content="Esta página trata sobre los automoviles Maserati y venta de merchadising o sus vehículos">

		<meta name="generator" content={Astro.generator} />
		<title>{title} | Maserati</title>

		<!-- LIBRERIA GSAP -->
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
	</head>
	<body class="bg-maserati-negro text-maserati-blanco min-h-screen flex flex-col m-0 p-0 overflow-x-hidden">
		<Navbar />

		<CartDrawer client:load />

		<main class="grow"> 
			<slot />
		</main>
				<Footer />
	</body>
</html>